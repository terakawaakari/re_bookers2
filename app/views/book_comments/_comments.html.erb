<div><%= attachment_image_tag book_comment.user, :profile_image, size: "30x30", format:'jpeg' %></div>
<% book_find.book_comments.each do |book_comment| %>
  <div class="border-bottom">
    <div><%= book_comment.comment %></div>
    <div class="d-flex mt-2">
      <div class="mr-2"><%= attachment_image_tag book_comment.user, :profile_image, size: "25x25", format:'jpeg', fallback:"no_image.jpg" %></div>
      <div><%= book_comment.user.name %></div>
    </div>
    <div class="mb-1 small"><%= book_comment.created_at.strftime('%Y/%m/%d') %></div>
    <% if book_comment.user == current_user %>
     <%= link_to "削除", book_book_comment_path(book_comment.book,book_comment), method: :delete, remote: true, class:"small" %>
    <% end %>
  </div>
<% end %>