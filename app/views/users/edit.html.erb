<div class="text-danger mt-3 ml-5">
<% if @user.errors.any? %>
  <div class="mb-2"><%= @user.errors.count %>errors prohibited this obj from being saved:</div>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>
</div>

<div class="container px-5 px-sm-0 pt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user ,local:true do |f| %>
      <div class="form-group">
      <h6>Name</h6>
      <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
      <h6>Image</h6>
      <%= attachment_image_tag @user,:profile_image,size:"50x50" %>
      <%= f.attachment_field :profile_image,placeholder:"ファイルを選択" %>
      </div>
      <div class="form-group">
      <h6>Introduction</h6>
      <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="my-2">
      <%= f.submit "Update User",class: "btn btn-sm btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>