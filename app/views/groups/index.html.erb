<div class="container px-5 px-sm-0 pt-3">
  <div class="row">
    <!--左側-->
    <%= render 'books/left',book: @book, user_id: current_user %>
    <!--左側ここまで-->
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Groups</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <%= link_to group_path(group.id) do %>
                <%= attachment_image_tag group, :image, size: "30x30", format:'jpeg', fallback:"no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to group_path(group.id) do %>
                  <%= group.name %>
                <% end %>
              </td>
              <td><%= group.introduction %></td>
              <% if group.owner_id = current_user %>
                <td><%= link_to "Edit", edit_group_path(group.id), class:"btn btn-sm btn-success" %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!--右側ここまで-->
    </div>
  </div>
</div>