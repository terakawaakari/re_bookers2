<div class="container px-5 px-sm-0 pt-3">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Book search</h1>
      <div class="my-3">
      <%= form_with url: books_search_path, method: :get, local: true do |f| %>
        <%= f.text_field :title %>
        <%= f.submit :search, class:"my-2 btn btn-sm btn-primary" %>
      <% end %>
      </div>

      <table class="table">
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user, :profile_image, size: "30x30", format:'jpeg', fallback:"no_image.jpg" %>
              <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>